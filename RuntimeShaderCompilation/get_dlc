#!/usr/bin/env bash

git -C `dirname "$0"` submodule update --init

if [[ "$OSTYPE" == "linux-gnu"* ]]; then
	MACHINE_TYPE=`uname -m`
	if [[ "$MACHINE_TYPE" == "armv"* ]]; then
		git -C `dirname "$0"`/Kinc submodule update --init Tools/linux_arm
	elif [[ "$MACHINE_TYPE" == "aarch64"* ]]; then
		git -C `dirname "$0"`/Kinc submodule update --init Tools/linux_arm64
	else
		git -C `dirname "$0"`/Kinc submodule update --init Tools/linux_x64
	fi
elif [[ "$OSTYPE" == "darwin"* ]]; then
	git -C `dirname "$0"`/Kinc submodule update --init Tools/macos
elif [[ "$OSTYPE" == "FreeBSD"* ]]; then
	git -C `dirname "$0"`/Kinc submodule update --init Tools/freebsd_x64
fi
